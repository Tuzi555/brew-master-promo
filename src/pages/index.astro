---
import '@/styles/globals.css'

import Layout from '../layouts/Layout.astro';
import { BarChart2, Bell, Coffee } from 'lucide-react';
import { Button } from '@/components/ui/button';
---

<Layout title="BrewMaster">

        <div class="flex min-h-screen flex-col">
            <header class="flex h-14 items-center px-4 lg:px-6">
                <a class="flex items-center justify-center" href="#">
                    <Coffee className="mr-2 h-6 w-6" />
                    <span class="font-bold">CaffeineTracker</span>
                </a>
                <nav class="ml-auto flex gap-4 sm:gap-6">
                    <a class="text-sm font-medium underline-offset-4 hover:underline" href="#">
                        Features
                    </a>
                    <a class="text-sm font-medium underline-offset-4 hover:underline" href="#">
                        About
                    </a>
                </nav>
            </header>
            <main class="flex-1">
                <section class="w-full py-12 md:py-24 lg:py-32 xl:py-48">
                    <div class="px-4 md:px-6">
                        <div class="flex flex-col items-center space-y-4 text-center">
                            <div class="space-y-2">
                                <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none">
                                    Track Your{" "}
                                    <span class="bg-gradient-to-r from-destructive to-accent bg-clip-text text-transparent">
                                        Caffeine
                                    </span>
                                    , Boost Your{" "}
                                    <span class="bg-gradient-to-r from-success to-warning bg-clip-text text-transparent">
                                        Productivity
                                    </span>
                                </h1>
                                <p class="mx-auto max-w-[700px] text-gray-500 dark:text-gray-400 md:text-xl">
                                    Log your coffee consumption, monitor your caffeine levels, and optimize your energy
                                    throughout the day.
                                </p>
                            </div>
                            <div class="space-x-4">
                                <Button>Get Started</Button>
                                <Button variant="outline">Learn More</Button>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="w-full bg-neutral py-12 md:py-24 lg:py-32">
                    <div class="px-4 md:px-6">
                        <h2 class="mb-12 text-center text-3xl font-bold tracking-tighter sm:text-5xl">
                            Key Features
                        </h2>
                        <div class="grid gap-10 sm:grid-cols-2 md:grid-cols-3">
                            <div class="flex flex-col items-center space-y-3 text-center">
                                <Coffee className="h-12 w-12 text-primary" />
                                <h3 class="text-xl font-bold">Log Your Brews</h3>
                                <p class="text-gray-500 dark:text-gray-400">
                                    Easily record each cup of coffee you drink throughout the day.
                                </p>
                            </div>
                            <div class="flex flex-col items-center space-y-3 text-center">
                                <BarChart2 className="h-12 w-12 text-primary" />
                                <h3 class="text-xl font-bold">Track Caffeine Levels</h3>
                                <p class="text-gray-500 dark:text-gray-400">
                                    Monitor your caffeine intake with detailed charts and insights.
                                </p>
                            </div>
                            <div class="flex flex-col items-center space-y-3 text-center">
                                <Bell className="h-12 w-12 text-primary" />
                                <h3 class="text-xl font-bold">Smart Alerts</h3>
                                <p class="text-gray-500 dark:text-gray-400">
                                    Receive notifications to optimize your coffee consumption.
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="w-full py-12 md:py-24 lg:py-32">
                    <div class="px-4 md:px-6">
                        <div class="flex flex-col items-center space-y-4 text-center">
                            <div class="space-y-2">
                                <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
                                    Start Tracking Today
                                </h2>
                                <p class="mx-auto max-w-[600px] text-gray-500 dark:text-gray-400 md:text-xl">
                                    Join thousands of coffee lovers who are optimizing their caffeine intake and
                                    boosting productivity.
                                </p>
                            </div>
                            <div class="w-full max-w-sm space-y-2">
                                <form class="flex space-x-2">
                                    <input class="max-w-lg flex-1" placeholder="Enter your email" type="email" />
                                    <Button type="submit">Sign Up</Button>
                                </form>
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    By signing up, you agree to our{" "}
                                    <a class="underline underline-offset-2" href="#">
                                        Terms & Conditions
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
            <footer class="flex w-full shrink-0 flex-col items-center gap-2 border-t px-4 py-6 sm:flex-row md:px-6">
                <p class="text-xs text-gray-500 dark:text-gray-400">Here should probably be a copyright</p>
                <nav class="flex gap-4 sm:ml-auto sm:gap-6">
                    <a class="text-xs underline-offset-4 hover:underline" href="#">
                        Terms of Service
                    </a>
                    <a class="text-xs underline-offset-4 hover:underline" href="#">
                        Privacy
                    </a>
                </nav>
            </footer>
        </div>
</Layout>

